[ui]
username = Jon Blackburn <jon.blackburn@pervasive-health.com>
editor = vim
merge = meld

[auth]
pervasive.prefix = *
pervasive.username = jon.blackburn
pervasive.schemes = http https ssh
apervita.prefix = *
apervita.username = jon.blackburn
apervita.schemes = http https ssh

[merge-tools]
meld.args = $local $base $other $output

[paths]
pervasive = ssh://hg@bitbucket.org/pervasive/cobalt
core = ssh://hg@bitbucket.org/apervita/core
web = ssh://hg@bitbucket.org/apervita/web
static = ssh://hg@bitbucket.org/apervita/static
toolslinux = ssh://hg@bitbucket.org/apervita/tools_linux
toolsmac = ssh://hg@bitbucket.org/apervita/tools_mac
toolswin = ssh://hg@bitbucket.org/apervita/tools_win
ontology = ssh://hg@bitbucket.org/apervita/reducedtc
libs = ssh://hg@bitbucket.org/apervita/libs
#cobreqs =  ~/dev/projects/cobaltEggs
#deptools = ~/code/deployment_tools

[hooks]
#pretxncommit.pep8 = python:hghooks.code.pep8hook
#pretxncommit.pyflakes = python:hghooks.code.pyflakeshook
pretxncommit.pdb = python:hghooks.code.pdbhook
#pretxncommit.jslint = python:hghooks.code.jslinthook

[pep8]
ignore = E501

[extensions]
prompt = $HOME/hg-prompt/prompt.py
hgshelve = $HOME/hgshelve/hgshelve.py
fetch =
graphlog =
pager =
rebase =
color =
transplant =
mq =

[color]
custom.rev = red
custom.author = yellow
custom.desc = green
custom.branch = blue
custom.date = cyan

[pager]
pager = LESS='FRX' less

[alias]
rbd=rebase --keepbranches -d default
rb=rebase --keepbranches
local=outgoing --style $HOME/jeb-scripts/hg_oneline.style
